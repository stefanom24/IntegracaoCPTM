<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/fonte.css">
    <title>Estações Cadastradas</title>
    
    <style>
        .custom-title {
            color: #F20505; 
        }

        .btn-red {
            background-color: #ff0000; /* Vermelho padrão */
            border-color: #ff0000; /* Bordas no mesmo tom do fundo */
        }

        .btn-red:hover {
            background-color: #f97e7e; /* Vermelho mais claro no hover */
            border-color: #f97e7e; /* Bordas no mesmo tom do hover */
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <%- include ('navbar') %> 
    </header>

    <main class="container mt-5">
        <div class="text-center">
            <h1 class="display-2 custom-title">Estações Cadastradas</h1>
        </div>

        <div class="table-responsive mt-4">
            <table class="table table-striped" id="estacoesTable">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Código</th>
                        <th>Linhas</th>
                        <th>Blocos</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Estações serão inseridas aqui -->
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <a href="/" class="btn btn-secondary me-2 btn-red">Voltar</a>
        </div>

        <script>
            
            $(document).ready(function() {
                $.getJSON('/getEstacoes', function(data) {
                    data.data.forEach(function(estacao) {
                        console.log('./registroEstacao.json');
                        console.log(estacao);
                        $('#estacoesTable tbody').append(
                            '<tr>' +
                                '<td>' + estacao.nome + '</td>' +
                                '<td>' + estacao.codigo + '</td>' +
                                '<td>' + estacao.linhas.join(', ') + '</td>' +
                                '<td>' + estacao.blocos.join(', ') + '</td>' +
                            '</tr>'
                        );
                    });
                });
            });
        </script>
    </main>

    <footer>
        <%- include ('footer') %> 
    </footer>
</body>

</html>
