<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/fonte.css">
    <title>Trens Cadastrados</title>
    
    <style>
        .custom-title {
            color: #F20505; 
        }

        .btn-red {
            background-color: #ff0000; /* Vermelho padrão */
            border-color: #ff0000; /* Bordas no mesmo tom do fundo */
        }

        .btn-red:hover {
            background-color: #f97e7e; /* Vermelho mais claro no hover */
            border-color: #f97e7e; /* Bordas no mesmo tom do hover */
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <%- include ('navbar') %> 
    </header>

    <main class="container mt-5">
        <div class="text-center">
            <h1 class="display-2 custom-title">Trens Cadastrados</h1>
        </div>

        <div class="table-responsive mt-4">
            <table class="table table-striped" id="trensTable">
                <thead>
                    <tr>
                        <th>Modelo do Trem</th>
                        <th>Código do Trem</th>
                        <th>Linha(s) que pertence</th>
                        <th>Status</th>
                        <th>Bloco(s) que pertence</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Estações serão inseridas aqui -->
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <a href="/" class="btn btn-secondary me-2 btn-red">Voltar</a>
        </div>

        <script>
            
            $(document).ready(function() {
                $.getJSON('/getTrens', function(data) {
                    data.data.forEach(function(trens) {
                        console.log('./registroTrens.json');
                        console.log(trens);
                        $('#trensTable tbody').append(
                            '<tr>' +
                                '<td>' + trens.modelo + '</td>' +
                                '<td>' + trens.IDcode + '</td>' +
                                '<td>' + (Array.isArray(trens.LineBelong) ? trens.LineBelong.join(', ') : trens.LineBelong) + '</td>' +
                                '<td>' + trens.Status + '</td>' +
                                '<td>' + (Array.isArray(trens.Blocos) ? trens.Blocos.join(', ') : trens.Blocos) + '</td>' +                            
                            '</tr>'
                        );
                    });
                });
            });
        </script>
    </main>

    <footer>
        <%- include ('footer') %> 
    </footer>
</body>

</html>
